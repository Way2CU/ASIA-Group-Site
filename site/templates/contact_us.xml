<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" cms:eval="lang">
		<head>
			<title>
				<cms:text constant="site_title"/>
				<cms:raw text=" - "/>
				<cms:text constant="menu_contact_us"/>
			</title>
			<!-- Page description -->
			<cms:module
				name="page_info"
				action="set_description"
				article="contact_us"
				/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body class="$language_rtl ? 'rtl' : 'ltr'" cms:eval="class">
			<cms:template file="parts/header.xml"/>
			
			<div class="header_image contact">
				<cms:svg file="site-sprite.svg" class="triangle_shape" symbol="triangle_shape"/>
			</div>
			
			<h2><cms:text constant="menu_contact_us"/></h2>
			<cms:module
				name="articles"
				action="show"
				text_id="contact_us"
				template="parts/article.xml"
				>
				<param name="phone" value=""/>
				<param name="class" value="center"/>
			</cms:module>
			
			<cms:template file="parts/footer.xml"/>
		</body>
	</html>
</document>